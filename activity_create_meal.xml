<?xml version="1.0" encoding="utf-8"?> //Author: Isaac Zavala
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateMealActivity">


    <EditText                         //The edit text for the meal name
        android:id="@+id/edit_dinner"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        />
    
    <TextView                       //the subtext below the meal name edit text telling the user that this is where the meal name goes.
        android:id="@+id/meal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meal Name"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/edit_meal"
        />

    <EditText                    // The edit text where the calorie number goes
        android:id="@+id/edit_cal"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/meal_name"
        android:layout_centerHorizontal="true" />
    
    <TextView                        // The subtext below the calorie number edit text telling the user that this is where the meal name goes. 
        android:id="@+id/cal_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount of Calories"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/edit_cal"
        />
    
    <Button                         // The button to save the meal in the food file database. 
        android:id="@+id/save_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/cal_amount"
        android:text="Save to food file"
        />
    
</RelativeLayout>
