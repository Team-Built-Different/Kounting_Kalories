// This xml file was done by Eric Gonzalez. This file handles the GUI for the AddMealActivity.java class. The two buttons on this xml file are custom meal and new meal.   
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMealActivity">
// new meal button. ID NewMealButton
    <Button
        android:id="@+id/NewMealButton"
        android:layout_width="363dp"
        android:layout_height="48dp"
        android:layout_marginBottom="76dp"
        android:text="New Meals"
        app:layout_constraintBottom_toTopOf="@+id/CustomMealsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
//Custom meal buttom. ID CustomMealButton
    <Button
        android:id="@+id/CustomMealsButton"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="104dp"
        android:text="Custom Meals"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
